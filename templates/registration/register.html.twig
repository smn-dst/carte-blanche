{% extends 'base.html.twig' %}

{% block title %}Créer un compte
{% endblock %}

{% block body %}
	<div class="min-h-screen flex items-center justify-center relative overflow-hidden py-12">

		<div class="absolute inset-0 from-primary/10 via-background to-background">
			<div class="absolute inset-0 opacity-30">
				<div class="absolute top-1/4 right-1/4 w-96 h-96 bg-primary/20 rounded-full blur-3xl animate-pulse"></div>
				<div class="absolute bottom-1/4 left-1/4 w-96 h-96 bg-primary/10 rounded-full blur-3xl animate-pulse delay-700"></div>
			</div>
		</div>

		<div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
			<div class="max-w-md mx-auto">

				<div class="text-center mb-8">
					<h1 class="text-4xl font-bold mb-2">Créer un compte</h1>
					<p class="text-muted-foreground">Rejoignez la plateforme premium d'enchères</p>
				</div>

				{% for message in app.flashes('error') %}
					<div class="mb-4 p-4 bg-red-500/10 border border-red-500/30 rounded-lg text-red-400 text-sm">
						{{ message }}
					</div>
				{% endfor %}
				{% for message in app.flashes('success') %}
					<div class="mb-4 p-4 bg-green-500/10 border border-green-500/30 rounded-lg text-green-400 text-sm">
						{{ message }}
					</div>
				{% endfor %}

				<div class="p-8 bg-card border border-border rounded-xl shadow-lg">

					{{ form_start(registrationForm, { attr: { class: 'space-y-6', novalidate: 'novalidate' } }) }}

					<div class="grid grid-cols-2 gap-4">
						<div>
							{{ form_label(registrationForm.firstName, null, { label_attr: { class: 'block text-sm mb-2 font-medium' } }) }}
							{{ form_widget(registrationForm.firstName, {
            attr: {
                class: 'w-full px-4 py-2.5 rounded-lg border border-border bg-background text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-colors',
                placeholder: 'Prénom'
            }
        }) }}
							{{ form_errors(registrationForm.firstName) }}
						</div>

						<div>
							{{ form_label(registrationForm.lastName, null, { label_attr: { class: 'block text-sm mb-2 font-medium' } }) }}
							{{ form_widget(registrationForm.lastName, {
            attr: {
                class: 'w-full px-4 py-2.5 rounded-lg border border-border bg-background text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-colors',
                placeholder: 'Nom'
            }
        }) }}
							{{ form_errors(registrationForm.lastName) }}
						</div>
					</div>

					<div>
						{{ form_label(registrationForm.email, null, { label_attr: { class: 'block text-sm mb-2 font-medium' } }) }}
						{{ form_widget(registrationForm.email, {
        attr: {
            class: 'w-full px-4 py-2.5 rounded-lg border border-border bg-background text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-colors',
            placeholder: 'votre@email.fr'
        }
    }) }}
						{{ form_errors(registrationForm.email) }}
					</div>

					<div>
						{{ form_label(registrationForm.plainPassword, null, { label_attr: { class: 'block text-sm mb-2 font-medium' } }) }}
						{{ form_widget(registrationForm.plainPassword, {
        attr: {
            class: 'w-full px-4 py-2.5 rounded-lg border border-border bg-background text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-colors',
            placeholder: '••••••••'
        }
    }) }}
						{{ form_errors(registrationForm.plainPassword) }}
					</div>

					<div>
						{{ form_label(registrationForm.confirmPassword, null, { label_attr: { class: 'block text-sm mb-2 font-medium' } }) }}
						{{ form_widget(registrationForm.confirmPassword, {
        attr: {
            class: 'w-full px-4 py-2.5 rounded-lg border border-border bg-background text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-colors',
            placeholder: 'Confirmer le mot de passe'
        }
    }) }}
						{{ form_errors(registrationForm.confirmPassword) }}
					</div>

					<div>
						{{ form_label(registrationForm.phoneNumber, null, { label_attr: { class: 'block text-sm mb-2 font-medium' } }) }}
						{{ form_widget(registrationForm.phoneNumber, {
        attr: {
            class: 'w-full px-4 py-2.5 rounded-lg border border-border bg-background text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-colors',
            placeholder: '06 12 34 56 78'
        }
    }) }}
						{{ form_errors(registrationForm.phoneNumber) }}
					</div>

					<div class="flex items-baseline gap-3 p-4 bg-secondary/50 rounded-lg">

						{{ form_widget(registrationForm.agreeTerms, {
        attr: {
            class: 'cb-checkbox'
        }
    }) }}

						<div class="flex-1">
							{{ form_label(registrationForm.agreeTerms, null, {
            label_attr: {
                class: 'text-sm text-muted-foreground cursor-pointer'
            }
        }) }}

							{{ form_errors(registrationForm.agreeTerms) }}
						</div>

					</div>

					<div class="flex items-center">
						{% include 'Components/buttons/buttons-primary.html.twig' with {
						as: 'button',
						label: 'Créer mon compte',
						variant: 'primary',
						with_arrow: true,
						extra_classes: 'flex w-full group-hover:bg-white group-hover:text-primary [&_svg]:transition-transform [&_svg]:duration-300 [&_svg]:group-hover:translate-x-1 hover:cursor-pointer'
					} %}
					</div>

					{{ form_end(registrationForm) }}


					<div class="relative my-6">
						<div class="absolute inset-0 flex items-center">
							<div class="w-full border-t border-border"></div>
						</div>
						<div class="relative flex justify-center">
							<span class="px-4 bg-card text-xs text-muted-foreground">OU</span>
						</div>
					</div>

					<div class="space-y-3">
						<button class="w-full flex items-center justify-center gap-3 px-6 py-3 border border-border rounded-lg hover:bg-secondary transition-colors text-sm font-medium">
							<svg class="w-5 h-5" viewbox="0 0 24 24">
								<path fill="currentColor" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
								<path fill="currentColor" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
								<path fill="currentColor" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
								<path fill="currentColor" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
							</svg>
							S'inscrire avec Google
						</button>
						<button class="w-full flex items-center justify-center gap-3 px-6 py-3 border border-border rounded-lg hover:bg-secondary transition-colors text-sm font-medium">
							<svg class="w-5 h-5" fill="currentColor" viewbox="0 0 24 24">
								<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
							</svg>
							S'inscrire avec GitHub
						</button>
					</div>

					<div class="mt-8 text-center">
						<p class="text-sm text-muted-foreground">
							Vous avez déjà un compte ?
							<a href="{{ path('app_login') }}" class="text-primary hover:underline font-semibold ml-1">
								Se connecter
							</a>
						</p>
					</div>

				</div>

				<div class="mt-6 p-6 bg-primary/5 border border-primary/20 rounded-xl">
					<h3 class="font-semibold mb-3 text-sm">Avantages membre :</h3>
					<div class="space-y-2 text-sm text-muted-foreground">
						{% set benefits = [
                        'Accès exclusif aux enchères premium',
                        'Notifications en temps réel',
                        'Historique de vos participations',
                        'Support prioritaire'
                    ] %}
						{% for benefit in benefits %}
							<div class="flex items-center gap-2">
								<svg class="w-4 h-4 text-primary flex-shrink-0" fill="none" stroke="currentColor" viewbox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
								</svg>
								<span>{{ benefit }}</span>
							</div>
						{% endfor %}
					</div>
				</div>

				<div class="mt-6 text-center">
					<a href="{{ path('app_home') }}" class="text-sm text-muted-foreground hover:text-foreground transition-colors">
						← Retour à l'accueil
					</a>
				</div>

			</div>
		</div>
	</div>


	<script>
		function togglePassword(inputId, iconId) {
const input = document.getElementById(inputId);
const icon = document.getElementById(iconId);
const isPassword = input.type === 'password';

input.type = isPassword ? 'text' : 'password';
icon.innerHTML = isPassword ? `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"/>` : `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>`;
}
	</script>
{% endblock %}
