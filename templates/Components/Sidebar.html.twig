{% set nav_items = [
    { path: '/dashboard', label: 'Dashboard', item: 'data:image/svg+xml;base64,', role: 'ROLE_USER' },
    { path: '/encheres', label: 'Les enchères', item: 'data:image/svg+xml;base64,', role: 'ROLE_USER' },
    { path: '/admin-users', label: 'Utilisateurs', item: 'data:image/svg+xml;base64,', role: 'ROLE_USER' },
    { path: '/admin-sales', label: 'Les ventes', item: 'data:image/svg+xml;base64,', role: 'ROLE_USER' },
    { path: '/admin-refund', label: 'Les remboursements', item: 'data:image/svg+xml;base64,', role: 'ROLE_USER' },
    { path: '/admin-logs', label: 'Logs IA', item: 'data:image/svg+xml;base64,', role: 'ROLE_USER' },
    { path: '/reservations', label: 'Mes réservations', item: 'data:image/svg+xml;base64,', role: 'ROLE_USER' },
    { path: '/encheres/:id', label: 'Mes annonces', item: 'data:image/svg+xml;base64,', role: 'ROLE_USER' },
    { path: '/calendrier', label: 'Calendrier des enchères', item: 'data:image/svg+xml;base64,', role: 'ROLE_USER' },
    { path: '/favorites', label: 'Favoris', item: 'data:image/svg+xml;base64,', role: 'ROLE_USER' },
    { path: '/profil', label: 'Profil', item: 'data:image/svg+xml;base64,', role: 'ROLE_USER' }
] %}

<aside class="flex-col w-72 border-r border-sidebar-border bg-sidebar fixed h-full">
	<div class="p-6 flex-1 overflow-y-auto">
		<a href="/" class="block mb-12">
			<div class="flex items-baseline gap-2">
				<span class="text-3xl font-bold">Carte blanche</span>
				<div class="w-2 h-2 rounded-full bg-primary"></div>
			</div>
		</a>

		<nav class="space-y-1">
			{% for item in nav_items %}
				{% if is_granted(item.role) %}
					<a href="{{ item.path }}" class="flex items-center gap-3 px-4 py-3 rounded-lg transition-all relative overflow-hidden group text-muted-foreground hover:text-foreground hover:bg-secondary">
						<img src="{{ item.item }}" alt="{{ item.label }}" class="w-5 h-5">
						<span class="text-sm">{{ item.label }}</span>
					</a>
				{% endif %}
			{% endfor %}
		</nav>

		<div class="mt-8 pt-6 border-t border-sidebar-border">
			<a href="/panier">
				<button class="w-full flex justify-start items-center gap-3 px-4 py-2 border border-border rounded-lg hover:bg-secondary hover:border-primary/50 transition-all">
					<img src="data:image/svg+xml;base64," alt="Panier" class="w-5 h-5">
					<span class="text-sm">Panier</span>
				</button>
			</a>
		</div>
	</div>

	<div class="p-6 border-t border-sidebar-border">
		<div class="text-xs text-muted-foreground space-y-1">
			<p>© 2026 BID Platform</p>
			<p>Premium Auctions</p>
		</div>
	</div>
</aside>
